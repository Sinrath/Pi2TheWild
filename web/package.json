{
  "name": "weatherstation-web-template",
  "version": "0.1.0",
  "description": "Template for the web part of the weather station. Based on NodeJS and TypeScript.",
  "repository": {
    "type": "git",
    "url": "https://github.engineering.zhaw.ch/Vorpraktikum-IT/Projekt-Vorlage"
  },
  "author": "Andreas Ahlenstorf",
  "license": "Apache-2.0",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "dotenv": "8.0.0",
    "errorhandler": "1.5.1",
    "express": "4.17.1",
    "express-handlebars": "3.1.0"
  },
  "devDependencies": {
    "@types/dotenv": "6.1.1",
    "@types/errorhandler": "0.0.32",
    "@types/express": "4.17.0",
    "@types/express-handlebars": "0.0.32",
    "@types/jest": "24.0.15",
    "@types/node": "10.14.12",
    "@types/shelljs": "0.8.5",
    "@types/supertest": "2.0.8",
    "chai": "4.2.0",
    "concurrently": "4.1.1",
    "jest": "24.8.0",
    "jest-junit": "6.4.0",
    "nodemon": "1.19.1",
    "shelljs": "0.8.3",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tslint": "5.18.0",
    "typescript": "3.5.3"
  }
}
